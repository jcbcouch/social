# Server Configuration
NODE_ENV=development
PORT=3000
SERVER_DOMAIN=http://localhost:3000
SERVER_NAME=My Social Network
SERVER_DESCRIPTION=A federated social network

# Database
DATABASE_URL="file:./dev.db"

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# Federation
# Comma-separated list of trusted peer domains
PEERS="https://example.com,https://another-instance.social"
# Set to 'true' to disable signature verification in development
SKIP_SIGNATURE_VERIFICATION=false

# CORS (comma-separated list of allowed origins)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Logging
LOG_LEVEL=info

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=15*60*1000  # 15 minutes
RATE_LIMIT_MAX=100  # 100 requests per window

# Uploads (if you implement file uploads)
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10*1024*1024  # 10MB

# Email (if you implement email notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=user@example.com
# SMTP_PASS=your-email-password
# EMAIL_FROM=noreply@example.com
